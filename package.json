{
  "name": "lambster",
  "version": "1.0.0",
  "description": "",
  "keywords": [
    "lambda-calculus",
    "parser",
    "ast",
    "functional-programming",
    "typescript",
    "nearley",
    "pattern-matching"
  ],
  "author": "lambster contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/lambster.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/lambster/issues"
  },
  "homepage": "https://github.com/your-org/lambster#readme",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "bun run build.ts",
    "build:watch": "bun run build.ts --watch",
    "clean": "rm -rf dist",
    "prebuild": "bun run clean",
    "prepublishOnly": "bun run build",
    "check": "bunx prettier --check .",
    "format": "bunx prettier --write .",
    "lint": "bunx eslint .",
    "lint:fix": "bunx eslint --fix .",
    "parser:compile": "bunx nearleyc nearley/lambster.ne nearley/lambster_parser.js > nearley/lambster_parser.js",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "size": "bunx bundlesize",
    "test": "bun test"
  },
  "dependencies": {
    "nearley": "^2.20.1",
    "ts-pattern": "^5.7.1",
    "typedoc": "^0.28.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.27.0",
    "@types/bun": "latest",
    "bundlesize": "^0.18.2",
    "eslint": "^9.27.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.32.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "prettier": {
    "experimentalTernaries": true,
    "printWidth": 80,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "consistent",
    "trailingComma": "all",
    "bracketSpacing": true,
    "objectWrap": "collapse",
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/esm/index.js",
      "maxSize": "50kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/esm/index.min.js",
      "maxSize": "30kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/cjs/index.cjs",
      "maxSize": "50kb",
      "compression": "gzip"
    },
    {
      "path": "./dist/cjs/index.min.cjs",
      "maxSize": "30kb",
      "compression": "gzip"
    }
  ]
}
